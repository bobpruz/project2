<article class="book">
  <div class="title">
    <a href="{{id}}" target="_blank">{{title}}</a>
    <span><img src="/images/{{id}}.jpg" alt="{{title}} cover picture"></span>
    Author: {{author}}
  </div>
  <div class="meta">
    {{#if quantity}}
    Quantity on hand: {{quantity}}
    {{else}}
    Not Available
    {{/if}}
  </div>
</article>